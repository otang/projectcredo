<div class="list-details">
  <% if @list.access == 'contributors' %>
   <span data-toggle="tooltip" data-placement="right" title="Only contibutors may edit or add references to this list"> 🔒 </span>
  <% else %>
    <span data-toggle="tooltip" data-placement="right" title="Anyone may edit or add references to this list"> 🌎 </span>
  <% end %>

  curated by <%= link_to @list.owner.username, user_lists_path(@list.owner) %>

  <% if @list.others.any? %>
    and
    <span
      tabindex="0"
      class="action-link"
      data-container="body"
      data-toggle="popover"
      data-placement="top"
      data-html="true"
      data-content=
        "<%=
          @list.others.map do |user|
            link_to user.username, user_lists_path(user)
          end.join(', ')
        %>"
      data-trigger="focus">
      <%= pluralize(@list.others.length, 'other') %>
    </span>
  <% end %>

   on <%= @list.created_at.strftime("%B %d, %Y") %>

</div>