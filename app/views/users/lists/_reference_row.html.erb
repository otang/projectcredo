<script type="text/x-template" id="reference-row">
  <tbody>
    <tr>
      <td>
        <a
          class="vote recommend"
          v-bind:class="{'toggled': reference.recommended}"
          @click="toggleRecommend(reference)"
          v-show="!recommendIsLoading"
        >
          {{reference.recommends}}
        </a>
        <span
          class="spinner"
          v-show="recommendIsLoading"
        >
          <span class="double-bounce1"></span>
          <span class="double-bounce2"></span>
        </span>
      </td>
      <td
        align="center"
      >
        <b v-if="reference.paper.published_at">{{reference.age}}</b>
      </td>
      <td>
        {{reference.paper.title}}
      </td>
      <td>
        <a
          class="show-details"
          :class="{'toggled': showPaperDetails}"
          v-if="hasPaperDetails"
          @click="showPaperDetails = !showPaperDetails"
        ></a>
      </td>
    </tr>
    <tr
      v-if="showPaperDetails"
      class="reference-detail"
    >
      <td colspan="4">
        <div v-if="reference.notes.length > 0">
          <span class="header">Notes and Highlights</span>
          <div v-for="note in reference.notes">
            <note
              :note="note"
              :signed-in="signedIn"
            >
            </note>
          </div>
        </div>
        <p class="header">
          <a
            class="tag"
            v-for="tag in reference.tag_list"
            v-text="tag"
          >
          </a>
        </p>
        <p class="header" v-if="reference.authors.length > 0">
        Authors
          <a
            class="tag"
            v-for="author in reference.authors"
            v-text="author.full_name"
          >
          </a>
        </p>
        <div v-if="reference.abstract">
          <span class="header">Abstract</span>
          <div
            v-if="truncateAbstract"
            @click.stop="truncateAbstract = !truncateAbstract"
          >
            {{reference.abstract, 300 | truncate}}
            <button
              class="btn-link"
              v-if="reference.abstract.length > 30"
              @click.stop="truncateAbstract = !truncateAbstract"
            >
              see more
            </button>
          </div>
          <div v-else>
            {{reference.abstract}}
            <button
              class="btn-link"
              @click.stop="truncateAbstract = !truncateAbstract"
            >
              see less
            </button>
          </div>
        </div>
      </td>
    </tr>
  </tbody>
</script>