<script type="text/x-template" id="abstract">
  <div>
    {{abstract, 250, truncateAbstract | truncate}}
    <button
      class="btn-link"
      v-if="abstract.length > 250"
      @click.stop="truncateAbstract = !truncateAbstract"
    >
      {{truncateAbstract ? 'see more' : 'see less'}}
    </button>
  </div>
</script>