<script type="text/x-template" id="vote">
  <span>
    <a
      :class="[{'toggled': this.voteable.voted}, 'vote', voteable.type]"
      @click="toggleVote(voteable)"
      v-show="!isLoading"
    >
      {{voteable.votes}}
    </a>
    <span
      class="spinner"
      v-show="isLoading"
    >
      <span class="double-bounce1"></span>
      <span class="double-bounce2"></span>
    </span>
  </span>
</script>